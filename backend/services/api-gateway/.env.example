# API Gateway Configuration

# Service
SERVICE_NAME=api-gateway
SERVICE_PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Throttling
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:3001
CORS_CREDENTIALS=true

# Redis (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=verpa_redis_password_2024

# Service Discovery
SERVICE_REGISTRY_URL=http://localhost:8500

# Microservices URLs
USER_SERVICE_URL=http://localhost:3001
AQUARIUM_SERVICE_URL=http://localhost:3002
EVENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
ANALYTICS_SERVICE_URL=http://localhost:3005

# API Key for internal communication
INTERNAL_API_KEY=your-internal-api-key-for-service-communication

# Logging
LOG_LEVEL=debug

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090